# PERMISSIONS
alias service="sudo service"
alias tail="sudo tail"
alias apt-get="sudo apt-get"
alias mysql="mysql -u root -p"

# GESTION SERVEUR
alias maj="apt-get update"
alias Maj="apt-get upgrade"
alias Maj2="sudo ~/config/tools/update.sh"
alias files="find . -type f | wc -l"
alias majConf="sudo ~/config/tools/majConf.sh"
alias db="~/config/tools/db.sh"

# Fichiers
alias duf='du -sh *'
alias df='df -h'

# LOGS
alias logs="tail -f /var/log/caddy/voiretmanger.access.log"
alias logsFile="tail -f /var/log/caddy/files.access.log"
alias logsErrors="tail -f /var/log/caddy/voiretmanger.error.log"
alias syslog="tail -f /var/log/syslog"
alias caddylog="syslog | grep 'caddy'"

# CADDY
alias caddysetcap="sudo setcap cap_net_bind_service=+ep $(which caddy)"
alias caddystatus="service caddy status"
alias caddystart="service caddy start"
alias caddystop="service caddy stop"
alias caddyreload="service caddy reload"
alias caddyfile="sudo micro /etc/caddy/Caddyfile"

# Services
alias status="systemctl status"
alias restart="systemctl restart"
alias reload="systemctl reload"
alias start="systemctl start"
alias stop="systemctl stop"